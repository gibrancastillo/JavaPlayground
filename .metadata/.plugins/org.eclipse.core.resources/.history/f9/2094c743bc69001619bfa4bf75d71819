package com.ccc.messenger.resources;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

/**
 * The Jersey Param Annotations:
 * <> @PathParam goes in the method signature
 * <> @QueryParam goes in the method signature
 * <> 
 * 
 * @author gecasti
 *
 */
@Path("/injectdemo")
@Consumes(MediaType.TEXT_PLAIN)
@Produces(MediaType.TEXT_PLAIN)
public class InjectDemoResource {
	
	@GET
	@Path("/annotations")
	public String getParamUsingAnnotations() {
		return "Testing The Jersey Param Annotations";
	}
}